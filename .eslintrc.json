{
  "parser": "babel-eslint",
  "extends": "airbnb-base",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": false
  },
  "env": {
    "mocha": true
  },
  "rules": {
    "key-spacing": [2, {
      "align": "value"
    }],
    "eol-last": 0,
    "no-underscore-dangle": 0,
    "comma-dangle": ["error", "never"],
    "class-methods-use-this": ["off"],
    "no-use-before-define": ["error", {
      "functions": false,
      "classes": false
    }],
    "arrow-parens": ["error", "as-needed", {
      "requireForBlockBody": false
    }],
    "no-console": ["error", { "allow": ["dir", "log", "info", "warn", "error"] }]
  }
}
